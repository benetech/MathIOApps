-cache ['v1', admin?,  @platform_assistive_technology] do
  .entity-outer
    .entity
      .entity-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Attributes for Platform Assistive Technology
          %tbody
            %tr
              %th{scope: "row"}<
                Platform
              %td<
                = @platform_assistive_technology.platform

            %tr
              %th{scope: "row"}<
                Assistive technology
              %td<
                = @platform_assistive_technology.assistive_technology

        %nav.show-nav{role:"navigation"}
          = link_to platform_assistive_technologies_path, class: 'btn btn-info', title: "View the platform_assistive_technologies index" do
            %i.fa.fa-fw.fa-list{title: 'List'}
            Platform Assistive Technologies
          -if admin?
            = link_to edit_platform_assistive_technology_path(@platform_assistive_technology), title: "Edit this Platform Assistive Technology", class: 'btn btn-primary' do
              %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
              Edit
            = link_to new_platform_assistive_technology_path(@platform_assistive_technology), class: 'btn btn-success' do
              Add another Platform Assistive Technology
