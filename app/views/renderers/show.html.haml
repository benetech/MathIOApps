-title = "Showing  #{@renderer}"
-meta title: title
-cache ['v1', admin?,  @renderer] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Key value pairs for this renderer
          %tbody
            %tr
              %th{scope: "row"}<
                Title
              %td<
                = @renderer.title
            %tr
              %th{scope: "row"}<
                Notes
              %td<
                = @renderer.notes
        %nav.show-nav{role:"navigation"}
          = link_to renderers_path, class: 'btn btn-info', title: "View the renderers index" do
            %i.fa.fa-fw.fa-list{title: 'List'}
            Renderers
          = link_to edit_renderer_path(@renderer), title: "Edit this renderer", class: 'btn btn-primary' do
            %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
            Edit
