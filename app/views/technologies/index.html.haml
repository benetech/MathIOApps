-title = 'Listing Technologies'
-meta title: title
- cache ['v1', admin?,  @technologies] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for technologies
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @technologies.each_with_index do |technology, idx|
              %tr{class: "item"}
                %td= technology.title
                %td= technology.notes
                %td.text-right<
                  = link_to technology, class: "btn btn-show", title: "Show this technology" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_technology_path(technology), class: "btn btn-edit", title: "Edit this technology"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to technology, title: "Delete this technology" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{technology}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_technology_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Technology
