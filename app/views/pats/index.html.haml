-title = 'Listing Pats'
-meta title: title
- cache ['v1', admin?,  @pats] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for pats
          %thead
            %tr
              %th{scope: "col"}<
                Platform
              %th{scope: "col"}<
                Assistive technology
              %th{scope: "col"}<
                Actions

          %tbody
            - @pats.each_with_index do |pat, idx|
              %tr{class: "item"}
                %td= pat.platform
                %td= pat.assistive_technology
                %td.text-right<
                  = link_to pat, class: "btn btn-show", title: "Show this pat" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_pat_path(pat), class: "btn btn-edit", title: "Edit this pat"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to pat, title: "Delete this pat" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{pat}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_pat_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Pat
