-title = "Showing  #{@pat}"
-meta title: title
-cache ['v1', admin?,  @pat] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Key value pairs for this pat
          %tbody
            %tr
              %th{scope: "row"}<
                Platform
              %td<
                = @pat.platform
            %tr
              %th{scope: "row"}<
                Assistive technology
              %td<
                = @pat.assistive_technology
        %nav.show-nav{role:"navigation"}
          = link_to pats_path, class: 'btn btn-info', title: "View the pats index" do
            %i.fa.fa-fw.fa-list{title: 'List'}
            Pats
          = link_to edit_pat_path(@pat), title: "Edit this pat", class: 'btn btn-primary' do
            %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
            Edit
