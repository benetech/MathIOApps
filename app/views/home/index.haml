- title= "Welcome to Math Support Matrix"
- if current_user
  -title += ", #{current_user}!"
-meta title: title,
  og: { title: title,
    url: request.url,
  }

.container-fluid
  %header
    %h1#page-title=title
    - if !current_user
      %p<
        The MathSupportMatrix (MSM) is a discovery and reference tool for pairing math content sources with accessible setups.
      %p>
        = link_to "Create an account", new_registration_path(resource_name)
        or
        = link_to "log in", new_session_path(resource_name)

  =render "setups/search", q: @q
  =render "setups/results", q: @q
