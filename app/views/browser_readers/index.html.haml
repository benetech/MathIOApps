-title = 'Listing Browser Readers'
-meta title: title
- cache ['v1', admin?,  @browser_readers] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for Browser Readers
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @browser_readers.each_with_index do |browser_reader, idx|
              %tr{class: "item"}
                %td= browser_reader.title
                %td= browser_reader.notes
                %td.text-right<
                  = link_to browser_reader, class: "btn btn-show", title: "Show this browser_reader" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_browser_reader_path(browser_reader), class: "btn btn-edit", title: "Edit this browser_reader"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to browser_reader, title: "Delete this browser_reader" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{Browser Reader}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_browser_reader_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Browser reader
