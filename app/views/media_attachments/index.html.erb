<p id="notice"><%= notice %></p>

<h1>Listing Media Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Link</th>
      <th>Matrix entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media_attachments.each do |media_attachment| %>
      <tr>
        <td><%= media_attachment.title %></td>
        <td><%= media_attachment.type %></td>
        <td><%= media_attachment.link %></td>
        <td><%= media_attachment.matrix_entry %></td>
        <td><%= link_to 'Show', media_attachment %></td>
        <td><%= link_to 'Edit', edit_media_attachment_path(media_attachment) %></td>
        <td><%= link_to 'Destroy', media_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

