-title = 'Listing Browser Reader File Formats'
-meta title: title
-#- source = browser_reader_file_formats_url
-#- caption = ""
-#- caption_twitter = ""
-#-description = ""
-#-thumb = ""
-#-keywords = %w{' '}
-#-meta title: title
  -#keywords: keywords,
  -#description: description,
  -#og: { title: :title,
    -#description: description,
    -#image: thumb,
    -#url: request.url,
  -#}
-#img_size =  browser.mobile? ? :index : :grande
-#cache ['v1', admin?,  img_size, @browser_reader_file_formats] do
- cache ['v1', admin?,  @browser_reader_file_formats] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for Browser Reader File Formats
          %thead
            %tr
              %th{scope: "col"}<
                Browser reader
              %th{scope: "col"}<
                File format
              %th{scope: "col"}<
                Actions

          %tbody
            - @browser_reader_file_formats.each_with_index do |browser_reader_file_format, idx|
              %tr{class: "item"}
                %td= browser_reader_file_format.browser_reader
                %td= browser_reader_file_format.file_format
                %td.text-right<
                  = link_to browser_reader_file_format, class: "btn btn-show", title: "Show #{browser_reader_file_format}" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_browser_reader_file_format_path(browser_reader_file_format), class: "btn btn-edit", title: "Edit #{browser_reader_file_format}"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to browser_reader_file_format, title: "Delete this Browser Reader File Format" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{browser_reader_file_format}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_browser_reader_file_format_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Browser reader file format
