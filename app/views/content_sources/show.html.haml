-title = "Showing  #{@content_source}"
-meta title: title
-cache ['v1', admin?,  @content_source] do
  .entity-outer
    .entity
      .entity-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Attributes for content_source
          %tbody
            %tr
              %th{scope: "row"}<
                Title
              %td<
                = @content_source.title

            %tr
              %th{scope: "row"}<
                Notes
              %td<
                = raw to_html(@content_source.notes)

        %nav.show-nav{role:"navigation"}
          = link_to content_sources_path, class: 'btn btn-info', title: "View the content_sources index" do
            %i.fa.fa-fw.fa-list{title: 'List'}
            Content Sources
          = link_to edit_content_source_path(@content_source), title: "Edit this content_source", class: 'btn btn-primary' do
            %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
            Edit
          = link_to new_content_source_path(@content_source), class: 'btn btn-success' do
            Add another content_source
