-title = "Showing  #{@format}"
-meta title: title
-cache ['v1', admin?,  @format] do
  .entity-outer
    .entity
      .entity-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Key value pairs for this format
          %tbody
            %tr
              %th{scope: "row"}<
                Title
              %td<
                = @format.title
            %tr
              %th{scope: "row"}<
                Notes
              %td<
                = @format.notes
            %tr
              %th{scope: "row"}<
                Text
              %td<
                = @format.text
        %nav.show-nav{role:"navigation"}
          = link_to formats_path, class: 'btn btn-info', title: "View the formats index" do
            %i.fa.fa-fw.fa-list{title: 'List'}
            Formats
          = link_to edit_format_path(@format), title: "Edit this format", class: 'btn btn-primary' do
            %i.fa.fa-fw.fa-pencil{title: 'Pencil'}
            Edit
