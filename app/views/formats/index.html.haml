-title = 'Listing Formats'
-meta title: title
- cache ['v1', admin?,  @formats] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for formats
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @formats.each_with_index do |format, idx|
              %tr{class: "item"}
                %td= format.title
                %td= format.notes
                %td.text-right<
                  = link_to format, class: "btn btn-show", title: "Show this format" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_format_path(format), class: "btn btn-edit", title: "Edit this format"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to format, title: "Delete this format" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{format}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_format_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Format
