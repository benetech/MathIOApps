-title = 'Listing Workflow_statuses'
-meta title: title
- cache ['v1', admin?,  @workflow_statuses] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for workflow_statuses
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Actions

          %tbody
            - @workflow_statuses.each_with_index do |workflow_status, idx|
              %tr{class: "item"}
                %td= workflow_status.title
                %td.text-right<
                  = link_to workflow_status, class: "btn btn-show", title: "Show this workflow_status" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_workflow_status_path(workflow_status), class: "btn btn-edit", title: "Edit this workflow_status"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to workflow_status, title: "Delete this workflow_status" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{workflow_status}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_workflow_status_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Workflow status
