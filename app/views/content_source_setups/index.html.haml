-title = 'Listing Content Source Setups'
-meta title: title
-#- source = content_source_setups_url
-#- caption = ""
-#- caption_twitter = ""
-#-description = ""
-#-thumb = ""
-#-keywords = %w{' '}
-#-meta title: title
  -#keywords: keywords,
  -#description: description,
  -#og: { title: :title,
    -#description: description,
    -#image: thumb,
    -#url: request.url,
  -#}
-#img_size =  browser.mobile? ? :index : :grande
-#cache ['v1', admin?,  img_size, @content_source_setups] do
- cache ['v1', admin?,  @content_source_setups] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for Content Source Setups
          %thead
            %tr
              %th{scope: "col"}<
                Setup
              %th{scope: "col"}<
                Content source
              %th{scope: "col"}<
                Actions

          %tbody
            - @content_source_setups.each_with_index do |content_source_setup, idx|
              %tr{class: "item"}
                %td= content_source_setup.setup
                %td= content_source_setup.content_source
                %td.text-right<
                  = link_to content_source_setup, class: "btn btn-show", title: "Show #{content_source_setup}" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  -if admin?
                    = link_to edit_content_source_setup_path(content_source_setup), class: "btn btn-edit", title: "Edit #{content_source_setup}"  do
                      %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                    = link_to content_source_setup, title: "Delete this Content Source Setup" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{content_source_setup}?"} do
                      %i.fa.fa-fw.fa-trash{title: "Trash can"}

        -if admin?
          %nav.index-nav{role:"navigation"}
            = link_to new_content_source_setup_path, class: 'btn btn-success new-link' do
              %i.fa.fa-fw.fa-plus{title: "Plus"}
              New Content source setup
