-title = 'Listing Content Source Setups'
-meta title: title
- cache ['v1', admin?,  @content_source_setups] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for content_source_setups
          %thead
            %tr
              %th{scope: "col"}<
                Setup
              %th{scope: "col"}<
                Content source
              %th{scope: "col"}<
                Actions

          %tbody
            - @content_source_setups.each_with_index do |content_source_setup, idx|
              %tr{class: "item"}
                %td= content_source_setup.setup
                %td= content_source_setup.content_source
                %td.text-right<
                  = link_to content_source_setup, class: "btn btn-show", title: "Show this content_source_setup" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_content_source_setup_path(content_source_setup), class: "btn btn-edit", title: "Edit this content_source_setup"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to content_source_setup, title: "Delete this content_source_setup" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{content_source_setup}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_content_source_setup_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Content source setup
