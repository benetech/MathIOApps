= simple_form_for @platform_version, validate: true, html: {multipart: true, class: 'form-horizontal'}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input} do |f|
  = f.error_notification
  .form-inputs
    -if params[:platform_id]
      = f.association :platform , selected: params[:platform_id]
    -else
      = f.association :platform 
    = f.input :version 
    = f.input :notes , :as => :pagedown, :input_html => { :preview => true }


  .form-actions
    .form-actions-inner
      = f.button :submit, class: 'btn btn-success'
      - if action_name == 'edit'
        %br
        %br
        = link_to @platform_version, class: 'btn btn-info' do
          %i.fa.fa-fw.fa-eye{title: "Eye"}
          View this platform version
      %br
      %br
      = link_to platform_versions_path, class: 'btn btn-info' do
        %i.fa.fa-fw.fa-list{title: "List"}
        View all Platform Versions
