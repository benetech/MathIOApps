-title = 'Listing Platform Versions'
-meta title: title
- cache ['v1', admin?,  @platform_versions] do
  .index-outer
    .index
      .index-inner
        %header{role: "header"}
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for platform_versions
          %thead
            %tr
              %th{scope: "col"}<
                Platform
              %th{scope: "col"}<
                Version
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @platform_versions.each_with_index do |platform_version, idx|
              %tr{class: "item"}
                %td= platform_version.platform
                %td= platform_version.version
                %td= platform_version.notes
                %td.text-right<
                  = link_to platform_version, class: "btn btn-show", title: "Show this platform_version" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_platform_version_path(platform_version), class: "btn btn-edit", title: "Edit this platform_version"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to platform_version, title: "Delete this platform_version" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{platform_version}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_platform_version_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Platform version
