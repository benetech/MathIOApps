= simple_form_for @capability, validate: true, html: {multipart: true, class: 'form-horizontal'}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input} do |f|
  = f.error_notification
  .form-inputs
    -if params[:setup_id]
      = f.association :setup , selected: params[:setup_id]
    -else
      = f.association :setup , selected: params[:setup_id]
    = f.association :affordance, prompt: "Pick your affordance"
    = f.association :verification_status, prompt: "Pick the verification status"

  .form-actions
    .form-actions-inner
      = f.button :submit, class: 'btn btn-success'
      - if action_name == 'edit'
        %br
        %br
        = link_to @capability, class: 'btn btn-info' do
          %i.fa.fa-fw.fa-eye{title: "Eye"}
          View this capability
      %br
      %br
      = link_to capabilities_path, class: 'btn btn-info' do
        %i.fa.fa-fw.fa-list{title: "List"}
        View all Capabilities
