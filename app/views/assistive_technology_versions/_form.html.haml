= simple_form_for @assistive_technology_version, validate: true, html: {multipart: true, class: 'form-horizontal'}, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input} do |f|
  = f.error_notification
  .form-inputs
    -if params[:assistive_technology_id]
      = f.association :assistive_technology, selected: params[:assistive_technology_id]
    -else
      = f.association :assistive_technology
    = f.input :version 
    = f.input :notes , :as => :pagedown, :input_html => { :preview => true }


  .form-actions
    .form-actions-inner
      = f.button :submit, class: 'btn btn-success'
      - if action_name == 'edit'
        %br
        %br
        = link_to @assistive_technology_version, class: 'btn btn-info' do
          %i.fa.fa-fw.fa-eye{title: "Eye"}
          View this assistive technology version
      %br
      %br
      = link_to assistive_technology_versions_path, class: 'btn btn-info' do
        %i.fa.fa-fw.fa-list{title: "List"}
        View all Assistive Technology Versions
