-title = 'Listing Assistive Technology Versions'
-meta title: title
- cache ['v1', admin?,  @assistive_technology_versions] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for Assistive Technology Versions
          %thead
            %tr
              %th{scope: "col"}<
                Assistive technology
              %th{scope: "col"}<
                Version
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @assistive_technology_versions.each_with_index do |assistive_technology_version, idx|
              %tr{class: "item"}
                %td= assistive_technology_version.assistive_technology
                %td= assistive_technology_version.version
                %td= assistive_technology_version.notes
                %td.text-right<
                  = link_to assistive_technology_version, class: "btn btn-show", title: "Show this assistive_technology_version" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_assistive_technology_version_path(assistive_technology_version), class: "btn btn-edit", title: "Edit this assistive_technology_version"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to assistive_technology_version, title: "Delete this assistive_technology_version" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{Assistive Technology Version}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_assistive_technology_version_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Assistive technology version
