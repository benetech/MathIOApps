-title = 'Listing Verification Statuses'
-meta title: title
-#- source = verification_statuses_url
-#- caption = ""
-#- caption_twitter = ""
-#-description = ""
-#-thumb = ""
-#-keywords = %w{' '}
-#-meta title: title
  -#keywords: keywords,
  -#description: description,
  -#og: { title: :title,
    -#description: description,
    -#image: thumb,
    -#url: request.url,
  -#}
-#img_size =  browser.mobile? ? :index : :grande
-#cache ['v1', admin?,  img_size, @verification_statuses] do
- cache ['v1', admin?,  @verification_statuses] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for Verification Statuses
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Actions

          %tbody
            - @verification_statuses.each_with_index do |verification_status, idx|
              %tr{class: "item"}
                %td= verification_status.title
                %td.text-right<
                  = link_to verification_status, class: "btn btn-show", title: "Show this verification_status" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_verification_status_path(verification_status), class: "btn btn-edit", title: "Edit this verification_status"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to verification_status, title: "Delete this verification_status" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{verification_status}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_verification_status_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Verification status
