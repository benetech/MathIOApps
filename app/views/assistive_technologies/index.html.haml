-title = 'Listing Assistive Technologies'
-meta title: title
- cache ['v1', admin?,  @assistive_technologies] do
  .index-outer
    .index
      .index-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.index-table
          %caption.sr-only Index table for assistive_technologies
          %thead
            %tr
              %th{scope: "col"}<
                Title
              %th{scope: "col"}<
                Notes
              %th{scope: "col"}<
                Actions

          %tbody
            - @assistive_technologies.each_with_index do |assistive_technology, idx|
              %tr{class: "item"}
                %td= assistive_technology.title
                %td= assistive_technology.notes
                %td.text-right<
                  = link_to assistive_technology, class: "btn btn-show", title: "Show this assistive_technology" do
                    %i.fa.fa-fw.fa-eye{title: "Eye"}
                  = link_to edit_assistive_technology_path(assistive_technology), class: "btn btn-edit", title: "Edit this assistive_technology"  do
                    %i.fa.fa-fw.fa-pencil{title: "Pencil"}
                  = link_to assistive_technology, title: "Delete this assistive_technology" , class: "btn btn-delete",  :method => :delete, :data => { :confirm => "Are you sure you want to delete #{assistive_technology}?"} do
                    %i.fa.fa-fw.fa-trash{title: "Trash can"}

        %nav.index-nav{role:"navigation"}
          = link_to new_assistive_technology_path, class: 'btn btn-success new-link' do
            %i.fa.fa-fw.fa-plus{title: "Plus"}
            New Assistive technology
